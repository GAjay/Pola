<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="name"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvEngineType"/>

    <TextView
            android:id="@+id/tvEngineType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Engine type"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tvName"/>

    <TextView android:id="@+id/tvAddress"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:padding="10dp"
              app:layout_constraintTop_toBottomOf="@id/tvName"
              android:text="address"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"

    />

    <TextView
            android:id="@+id/tvVin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvAddress"
            android:text="vin"
            android:padding="10dp"/>

    <View
            android:id="@+id/tempView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#efdcdcdc"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tvVin"
    />
</android.support.constraint.ConstraintLayout>